<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rl_main"
    android:background="@drawable/sora_night_0"
    tools:context="com.guohui.weather.MainActivity"
    >
    <RelativeLayout
        android:id="@+id/rl_main_bottom"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:background="@color/transparent"
        android:layout_height="44dp">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white"
            ></View>
        <ImageButton
            android:id="@+id/ibtn_show_city_list"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@color/transparent"
            android:layout_marginRight="5dp"
            android:src="@drawable/ic_list_black_24dp"
            android:layout_height="wrap_content" />
    </RelativeLayout>
<com.guohui.weather.view.CustomViewPager
    android:id="@+id/vp_main"
    android:layout_above="@id/rl_main_bottom"
    android:layout_width="match_parent"
    android:layout_height="match_parent"></com.guohui.weather.view.CustomViewPager>
</RelativeLayout>