<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_item_day"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingBottom="@dimen/text_padding_top_and_bottom"
        android:paddingLeft="@dimen/text_padding_left_and_right"
        android:paddingRight="@dimen/text_padding_left_and_right"
        android:paddingTop="@dimen/text_padding_top_and_bottom"
        android:text="星期一"
        android:textColor="@color/white"
        android:textSize="@dimen/default_text_size" />

    <ImageView
        android:id="@+id/tv_item_image"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:src="@drawable/ic_wb_cloudy_black_24dp" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="right">

        <TextView
            android:id="@+id/tv_item_temp_min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:paddingBottom="@dimen/text_padding_top_and_bottom"
            android:paddingLeft="@dimen/text_padding_left_and_right"
            android:paddingRight="@dimen/text_padding_left_and_right"
            android:paddingTop="@dimen/text_padding_top_and_bottom"
            android:text="17"

            android:textColor="@color/lwhite"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_item_temp_max"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@id/tv_item_temp_min"
            android:paddingBottom="@dimen/text_padding_top_and_bottom"
            android:paddingLeft="@dimen/text_padding_left_and_right"

            android:paddingTop="@dimen/text_padding_top_and_bottom"
            android:text="23"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />
    </RelativeLayout>
</LinearLayout>